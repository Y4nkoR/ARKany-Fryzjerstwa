@model ErrorViewModel
@{
    ViewData["Title"] = "Błąd";
}

<h1 class="text-danger text-center">Błąd</h1>
<h2 class="text-danger text-center">Wystąpił błąd w trakcie przetwarzania Twojego żądania.</h2>
<h2 class="text-danger text-center">Spróbuj ponownie później. Jeśli problem nadal występuje, skontaktuj się z autorami aplikacji.</h2>
<h2 class="text-center"><a href="mailto:ARKany.fryzjerstwa@outlook.com">ARKany.fryzjerstwa@outlook.com</a></h2>

@if (Model.ShowRequestId)
{
    <p class="text-danger text-center">
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

